# AI Task Orchestrator Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# CLAUDE CONFIGURATION
# =============================================================================

# Skip permission checks when executing Claude commands (default: false)
# Set to "true" if you want to bypass file permission validation
CLAUDE_SKIP_PERMISSIONS=false

# Maximum conversation turns for Claude (default: 0 = single execution)
# Set to 1+ for interactive mode, 0 for headless execution
CLAUDE_MAX_TURNS=0

# =============================================================================
# LLAMA CONFIGURATION  
# =============================================================================

# Ollama host for local LLAMA models (default: localhost)
LLAMA_HOST=localhost

# Ollama port (default: 11434)
LLAMA_PORT=11434

# LLAMA model to use (default: llama3.2:latest)
# Available models depend on what you have installed via `ollama pull`
LLAMA_MODEL=llama3.2:latest

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================

# Telegram bot token (get from @BotFather)
# Leave empty to disable Telegram interface
TELEGRAM_BOT_TOKEN=

# Comma-separated list of allowed user IDs
# Users must send /start to register before using the bot
TELEGRAM_ALLOWED_USERS=

# Optional: Chat ID for system notifications
# Leave empty to disable notifications
TELEGRAM_NOTIFICATION_CHAT_ID=

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
SYSTEM_LOG_LEVEL=INFO

# Maximum concurrent tasks (default: 3)
SYSTEM_MAX_CONCURRENT_TASKS=3

# Task timeout in seconds (default: 1800 = 30 minutes)
SYSTEM_TASK_TIMEOUT=1800

# Enable guarded write mode (default: false)
# When enabled, code changes are staged as diffs requiring manual approval
SYSTEM_GUARDED_WRITE=false

# =============================================================================
# VALIDATION CONFIGURATION
# =============================================================================

# Similarity threshold for output validation (0.0-1.0, default: 0.7)
# Lower values = stricter similarity requirements
VALIDATION_SIMILARITY_THRESHOLD=0.7

# Entropy threshold for output validation (0.0-1.0, default: 0.8)
# Lower values = stricter entropy requirements  
VALIDATION_ENTROPY_THRESHOLD=0.8

# Maximum validation retries (default: 3)
VALIDATION_MAX_RETRIES=3

# Backoff multiplier for retries (default: 2)
VALIDATION_BACKOFF_MULTIPLIER=2

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# 1. Never commit your actual .env file to version control
# 2. The bot token and user IDs are sensitive - keep them private
# 3. Consider using environment-specific files (.env.local, .env.prod)
# 4. Review file permissions on your .env file
#
# =============================================================================
# QUICK START
# =============================================================================
#
# 1. Copy this file to .env: cp env.example .env
# 2. Set TELEGRAM_BOT_TOKEN if you want Telegram integration
# 3. Set TELEGRAM_ALLOWED_USERS with your user ID
# 4. Adjust other settings as needed
# 5. Restart the orchestrator
#
# =============================================================================
