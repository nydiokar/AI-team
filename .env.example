# AI Task Orchestrator Environment Configuration
# Copy this file to .env and adjust values for your workstation or Nix shell.

# =============================================================================
# CLAUDE CLI CONFIGURATION (required)
# =============================================================================

# Base working directory where Claude will start each task. Point this to the
# root directory that contains the projects you want the orchestrator to touch.
CLAUDE_BASE_CWD=/home/you/projects

# Restrict Claude to this directory tree. Usually this matches CLAUDE_BASE_CWD.
CLAUDE_ALLOWED_ROOT=/home/you/projects

# Skip permission prompts from the Claude CLI (default: false). Only set to
# true when you fully trust the tasks being executed.
CLAUDE_SKIP_PERMISSIONS=false

# Execution caps for Claude CLI (in seconds and turns).
CLAUDE_TIMEOUT_SEC=300
CLAUDE_MAX_TURNS=0

# =============================================================================
# LLAMA / OLLAMA CONFIGURATION (optional)
# =============================================================================
LLAMA_HOST=localhost
LLAMA_PORT=11434
LLAMA_MODEL=llama3.2:latest

# =============================================================================
# TELEGRAM BOT CONFIGURATION (optional)
# =============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USERS=
TELEGRAM_CHAT_ID=

# =============================================================================
# SYSTEM TUNING
# =============================================================================
MAX_CONCURRENT_TASKS=3
MAX_QUEUE_SIZE=50
GUARDED_WRITE=false
TELEGRAM_RATE_LIMIT_REQUESTS=5
TELEGRAM_RATE_LIMIT_WINDOW_SEC=60
AGENTS_ENABLED=true

# =============================================================================
# VALIDATION SETTINGS
# =============================================================================
VALIDATION_SIMILARITY_THRESHOLD=0.7
VALIDATION_ENTROPY_THRESHOLD=0.8
VALIDATION_MAX_RETRIES=3
VALIDATION_BACKOFF_MULTIPLIER=2

# =============================================================================
# TIME-LAB INTEGRATION (optional / future phases)
# =============================================================================
TIME_LAB_ENABLED=true
TIME_LAB_PATH=/home/you/time-lab

# =============================================================================
# NOTES
# =============================================================================
# - Never commit your actual .env file to version control.
# - For Windows paths use escaped backslashes, e.g. C:\Users\you\Projects.
# - When running inside Nix, point CLAUDE_BASE_CWD to a writable workspace mount.
# - Additional environment variables are described in docs/IMPLEMENTATION_ROADMAP.md.
